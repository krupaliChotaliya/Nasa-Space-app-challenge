    <title>ConnectedEcos</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background: linear-gradient(180deg, #000000 0%, #252525 100%);
        }

        * {
            box-sizing: border-box;
        }

        .bg-img {
            background-image: url("/images/banner-earth4.jpg");
            min-height: 500px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
            animation: slideUp 1s ease forwards; /* Add slide-up animation */
        }

        @keyframes slideUp {
            from {
                transform: translateY(100%); /* Start off-screen */
                opacity: 0; /* Start invisible */
            }
            to {
                transform: translateY(0); /* End at original position */
                opacity: 1; /* Fully visible */
            }
        }

        .bg-img a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .container {
            margin: 20px;
            width: auto;
        }

        .topnav {
            overflow: hidden;
            float: right;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
            border-radius: 5px;
        }

        #logo {
            float: left;
        }

        .info {
            position: absolute;
            bottom: 10px;
            right: 150px;
            color: #ddd;
        }

        body {
            font-family: oxanium;
            margin: 0;
            padding: 0;
            color: white;
        }

        .dtcontainer {
            background-color: rgb(28, 28, 28, 0.6);
            border: 1px solid #ffffff;
            padding: 10px;
            width: 550px;
            margin: 50px auto;
            text-align: center;
            border-radius: 0% 0% 15% 15%;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
            top: -580px;
            left: -678px;
            gap: 0px;
        }

        .dtcontainer h1 {
            font-size: 24px;
            margin: 0;
            padding-bottom: 10px;
            opacity: 100%;
        }

        .dtcontainer .highlight {
            font-size: 36px;
            color: #48CFFB;
            opacity: 100%;
        }

        .dtcontainer p {
            font-size: 14px;
            line-height: 1.6;
            color: #ccc;
            padding: 10px 0;
            opacity: 100%;
        }

        .dtcontainer .button {
            background-color: #666;
            border: none;
            padding: 10px 20px;
            color: white;
            font-size: 14px;
            text-transform: uppercase;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            opacity: 100%;
        }

        .dtcontainer .button:hover {
            background-color: #48CFFB;
            opacity: 100%;
        }

        hr {
            height: 3px;
            background-color: #ddd;
        }

        #timeline {
            border: 1px solid #48CFFB;
            margin-left: 5px;
            margin-right: 5px;
            border-radius: 0% 0% 15% 15%;
        }

        .news {
            background: linear-gradient(179.91deg, #D9D9D9 0.07%, rgba(135, 135, 135, 0.5) 47.61%, rgba(115, 115, 115, 0) 84.95%);
            margin-top: 10%;
            padding: 20px;
        }

        .col-sm-6 {
            margin: 20px; /* Adjusted margin */
            height: auto;
            width: 30%; /* Increased width to fit two cards */
            transform: translateX(-100%); /* Start off-screen to the left */
            transition: transform 0.5s ease; /* Smooth transition */
        }

        .col-sm-6.slide-in {
            transform: translateX(0); /* Slide in to the original position */
        }

        #news1 {
            margin: 10px;
            width: 200px;
            padding-top: 20px;
        }

        .btn {
            padding: 10px 10px 10px 10px;
            color: #000;
            text-align: center; /* Align text to the right */
            width: 30%; /* Full width for button */
            margin-top: 10px;
            margin-left: 70%;
        }

        .contex {
            padding: 15px;
        }

        .description {
            max-height: 0; /* Hidden by default */
            overflow: hidden; /* Prevent overflow */
            transition: max-height 0.3s ease, opacity 0.3s ease; /* Animation for expansion */
            margin-top: 10px;
            color: #ccc; /* Color for the description */
            opacity: 0; /* Initially hidden */
        }

        .expanded {
            max-height: 100px; /* Set to accommodate the description */
            opacity: 1; /* Fade in */
        }

        @keyframes slideIn {20px
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        #footer {
            background: linear-gradient(180deg, #002B48 0%, #34556D 100%);
            opacity: 0; /* Start hidden */
            transform: translateY(100%); /* Start below the viewport */
            transition: transform 0.5s ease, opacity 0.5s ease; /* Transition for slide in */
        }

        #footer.show {
            opacity: 1; /* Make it visible */
            transform: translateY(0); /* Slide into view */
        }
    </style>
</head>

